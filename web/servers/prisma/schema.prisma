generator client {
  provider = "prisma-client-js"
  output   = "../prisma_compiled"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(PEGAWAI)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  mushrooms MushroomSorted[]
}

enum Role {
  PEGAWAI
  ADMIN
}

model Node {
  id          String      @id @default(uuid())
  name        String
  serial      String      @unique
  location    String?
  status      StatusNode  @default(OFFLINE)
  cameras     Camera[]
  mushrooms   MushroomSorted[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum StatusNode {
  ONLINE
  OFFLINE
  MAINTENANCE
}

model Camera {
  id        String       @id @default(uuid())
  nodeId    String
  name      String
  url       String       @unique
  status    StatusCamera @default(INACTIVE)
  logs      CameraLog[]
  node      Node         @relation(fields: [nodeId], references: [id])
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

enum StatusCamera {
  ACTIVE
  INACTIVE
  ERROR
}

model CameraLog {
  id         String         @id @default(uuid())
  cameraId   String
  imageUrl   String
  grade      MushroomGrade  @default(UNKNOWN)
  confidence Float?
  camera     Camera         @relation(fields: [cameraId], references: [id])
  createdAt  DateTime       @default(now())
}

model MushroomSorted {
  id         String         @id @default(uuid())
  grade      MushroomGrade  @default(UNKNOWN)
  quantity   Int
  createdAt  DateTime       @default(now())
  nodeId     String?
  node       Node?          @relation(fields: [nodeId], references: [id])
  createdBy  String?
  user       User?          @relation(fields: [createdBy], references: [id])
}

enum MushroomGrade {
  A
  B
  UNKNOWN
}
